<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<%= form_for @task do |form| %>
<ul>
  <li><%= form.label :name %><%= form.text_field :name %></li>
  <li><%= form.label :due_date %><%= form.date_select :due_date %></li>
  <li><%= form.submit %></li>
</ul>
<% end %>


<%= navigation_links %>

<table class="tasks">
  <col class="name" />
  <col class="due_date" />
  <col class="commands" />
  <% @tasks.each do |task| %>
    <%= render 'task', :task => task %>
  <% end %>
</table>
